<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play"
    tools:context=".GameActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:layout_marginRight="90dp"
        android:id="@+id/scoreLayout"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="@string/score"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/p1TV"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="casual"
            android:text="@string/player_1_x_0"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/p2TV"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="casual"
            android:text="@string/player_2_0_0"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
        <Button
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:text="@string/reset_board"
            android:layout_below="@+id/boartLayout"
            android:id="@+id/resetBtn"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/scoreLayout"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_alignParentRight="true"
        android:id="@+id/boartLayout"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btn_00"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_01"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_02"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="100dp">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_10"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_11"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_12"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="100dp">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_20"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_21"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:gravity="center"

                android:id="@+id/btn_22"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>